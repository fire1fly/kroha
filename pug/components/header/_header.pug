  var features_list = [
    {title: "App blocker", route: "features-appbrocker"}, 
    {title: "Statistics", route: "features-statistics"}, 
    {title: "Web control", route: "features-web"}, 
    {title: "YouTube control", route: "features-youtube"}, 
    {title: "Eye protection", route: "features-eye"}, 
    {title: "Photo & Contacts", rotue: "features-photocontacts"}, 
    {title: "Instant messenger", route: "features-messenger"},
