extends ./layouts/_common.pug

block variables
  -
    var staticRoute = './assets/static/'
    var pageTitle = 'Registration'
    var headerBordered = true
    var footerTop = true
    var footerBottom = true
    var footerBg = true

block prepend scripts
  script(src="./js/swiper-bundle.min.js")
  script(defer src="./js/accordion.js")
  script(defer src="./js/close.js")
  script(defer src="./js/sliders.js")
  script(defer src="./js/tabs.js")
  script(defer src="./js/temp_form.js")

block prepend styles
  link(rel="stylesheet", href="./css/swiper-bundle.min.css")

block header
  include ./components/header/_header.pug

block content
  main.main

    .pact
      .pact-container
        .pact-grid
          .pact-pic
            img(src=staticRoute + "activation-child-1.svg", alt="child")
            // img(src=staticRoute + "activation-child-2.svg", alt="child")
            // img(src=staticRoute + "activation-child-3.svg", alt="child")
          .pact-form
            form.pact-form__inner(action="#") 
              h1.pact-form-title.text2._fz-32._sm-fz-24._lh-1d3._text-darkblue._text-bold._sm-text-center Registration
              .text._fz-20._sm-fz-16._text-darkgrey._sm-text-center._mt-20 It will take few minutes
              ._mt-40
                .form-block
                  .input-field
                    input.input(type="email")
                    .input-label._bg-white E-mail
                  .input-output
                .form-block
                  .input-field
                    input.input(type="text")
                    .input-label._bg-white Name
                  .input-output
                .form-block
                  .input-field
                    input.input(type="password")
                    .input-label._bg-white Password
                  .input-output
                .form-block
                  .input-field
                    input.input(type="password")
                    .input-label._bg-white Password confirmation
                  .input-output
              .pact-form-f._mt-30._sm-row
                .pact-form-f-captcha
                  img(src=staticRoute + "captcha-example.png", alt="captcha")
                button.btn.btn-primary._rounded._px-10(type="button")
                  .btn-text._text-upper ok

    .sp-container._py-200._sm-pt-50._sm-pb-100._px-30._sm-px-20
      include ./components/_install3.pug

block footer
  include ./components/footer/_footer.pug