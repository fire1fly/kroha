        img(src="./assets/static/fs-comet-star.svg", alt="star")
      a.fs-space-orbital-3-item-1(href="#") 
        img(src="./assets/static/fs-comet-youtube.svg", alt="youtube")
      a.fs-space-orbital-3-item-2(href="#") 
        img(src="./assets/static/fs-comet-whatsapp.svg", alt="whatsapp")
      .fs-space-orbital-3-item-3
        img(src="./assets/static/fs-comet-star.svg", alt="star")
