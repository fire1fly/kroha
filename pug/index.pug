extends ./layouts/_common.pug

block variables
  -
    var staticRoute = './assets/static/'
    var pageTitle = 'Main'
    var firstScreen = true
    var firstScreenClass = "mp-fs"
    var footerTop = true
    var footerBottom = true
    var footerBg = true

block prepend scripts
  script(src="./js/swiper-bundle.min.js")
  script(defer src="./js/accordion.js")
  script(defer src="./js/close.js")
  script(defer src="./js/sliders.js")
  script(defer src="./js/tabs.js")
  script(defer src="./js/temp_form.js")

block prepend styles
  link(rel="stylesheet", href="./css/swiper-bundle.min.css")

block header
  include ./components/header/_header.pug
block firstScreen
  .fs
    .fs-space
      .fs-space-sun
        img(src="./assets/static/sun.svg", alt="sun")

      .fs-space-orbitals
        img(src=staticRoute + "orbitals-comets.svg", alt="orbitals")

    .fs-inner
      h1.fs-title Maximum <br> <em>care</em> about your <br> a child
      .fs-rowlist._mt-30._sm-mt-20
        .fs-rowlist-item.fs-text Protection
        .fs-rowlist-sep •
        .fs-rowlist-item.fs-text Security
        .fs-rowlist-sep •
        .fs-rowlist-item.fs-text Control
      .fs-btnbar._mt-30._sm-mt-20
        button.btn.btn-primary._rounded._text-upper.fs-btn(type="button") Renew license
        button.btn.btn-play(type="button")
          .btn-play-circle._1
          .btn-play-circle._2
          .btn-play-circle._3
          .btn-icon
            img(src="./assets/static/icon-play-primary.svg", alt="play")
      .fs-socbar.fs__socbar
        a.btn.fs-socbar-btn(href="#") 
          .btn-icon
            picture
              source(media="(min-width: 520px)", srcset="./assets/static/icon-ggle-play-label.svg")
              source(media="(min-width: 0px)", srcset="./assets/static/icon-ggle-play.svg")
              img(src="./assets/static/icon-ggle-play-label.svg", alt="Google Play")
        a.btn.fs-socbar-btn(href="#") 
          .btn-icon
            picture
              source(media="(min-width: 520px)", srcset="./assets/static/icon-apple-black-label.svg")
              source(media="(min-width: 0px)", srcset="./assets/static/icon-apple-black.svg")
              img(src="./assets/static/icon-apple-black-label.svg", alt="Google Play")
        a.btn.fs-socbar-btn(href="#") 
          .btn-icon
            picture
              source(media="(min-width: 520px)", srcset="./assets/static/icon-huawei-app-gallery-label.svg")
              source(media="(min-width: 0px)", srcset="./assets/static/icon-huawei-app-gallery.svg")
              img(src="./assets/static/icon-huawei-app-gallery-label.svg", alt="Google Play")

block content
  main.main
    include ./components/_total.pug

    section.ttls
      h2.ttls-title We are not a galaxy, but we are also part of the universe

    include ./components/_features-slider.pug

    include ./components/_features-slider2.pug

    include ./components/_articles-feed.pug

    include ./components/_form-registration.pug

    include ./components/_install.pug

block footer
  include ./components/footer/_footer.pug