block variables

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    block scripts

    block styles
      link(rel="stylesheet", href="./css/normalize.css")
      link(rel="stylesheet", href="./css/styles.min.css")

    title Kroha - #{pageTitle}

  body
    #root
      // .pph-mockup__wrapper и .pph-mockup это мокап обертки, их нужно будет убрать
      .pph-mockup__wrapper(class=mockupWrapperModificator)
        .pph-mockup(class=mockupModificator)
          block content
